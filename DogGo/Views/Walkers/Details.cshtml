@model DogGo.Models.ViewModels.WalkerProfileView

@{
    ViewData["Title"] = "Profile";
}


<div>
    <h1 class="mb-4">Walker Profile</h1>

    <section class="container" style="background-color:#f9f9f9">
        @if (String.IsNullOrEmpty(Model.Walker.ImageUrl))
        {
            <img style="width:100px;float:left;margin-right:20px"
             src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg" />
        }
        else
        {
            <img style="width:100px;float:left;margin-right:20px"
             src="@Model.Walker.ImageUrl" />
        }
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>

            <div class="row">
                @foreach (Walks walk in Model.Walks)
                {
                    <div class="card m-4" style="width: 18rem;">
                        <div class="card-body">
                            <div>
                                <label class="font-weight-bold">Date:</label>
                                <span>@walk.Date.ToString()</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Client:</label>
                                <span>@walk.Owner.Name</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Duration:</label>
                                <p>@(walk.Duration / 60) min</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>

        <section class="col-lg-4 col-md-8 container mt-5" style="background-color:#f6f7fb">
            <label style="font-size:40px;color:#929397">Total Walk Time:</label>
            <span style="font-size:40px">@(Model.TotalWalkTime / 3600) hr @(Model.TotalWalkTime / 60) min</span>
        </section>
    </div>
</div>

